#include <iostream>
#include <string>
#include <vector>
#include "Interpreter.h"


std::string get_input(std::string &S)
{
  std::cin >> S;
  return S;
}


std::string get_input()
{
  std::string output;
  std::cin >> output;
  return output;
}


std::vector< int > str_to_uint(std::string & S)
{
  std::vector< int > ints;
  std::string::iterator it;
  int i = 0;
  for (it = S.begin(); it != S.end(); ++it)
    {
      ints[i] = unsigned(int(*it));
      ++i;
    }
  return ints;  
}


int main()
{
  while(1)
    {
      std::cout << "Give me a string: ";
      std::string input = get_input();
      std::vector< unsigned int> uints = str_to_uint(input);

      std::cout << "Original Input: " << input << '\n';
      std::cout << "Converted input: " << uints << '\n';
    }
}
